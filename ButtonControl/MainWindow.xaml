<Window x:Class="ButtonControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="140" Width="210">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button x:Name="Button1" Grid.Row="0" Content="0回" Click="Button1_Click" Height="50"/>
        <RepeatButton x:Name="Button2" Grid.Row="1" Content="0回" Click="Button2_Click" Delay="1000" Interval="100" />
    </Grid>
</Window>
