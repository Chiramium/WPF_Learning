<Window x:Class="ShowObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowObject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <!-- スタイルをリソースに定義 -->
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <!-- 画面にボタンを複数置く -->
        <Button Content="スタイルの例1" />
        <Button Content="スタイルの例2" />
        <Button Content="スタイルの例3" />
        <Button Content="スタイルの例4" />
        <Button Content="スタイルの例5" />
        <Button Content="スタイルの例6" />
    </StackPanel>
</Window>
