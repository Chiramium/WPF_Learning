<Window x:Class="SliderControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SliderControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="425">
    <StackPanel Margin="5" Orientation="Horizontal">
        <Slider x:Name="slider" Minimum="-20" Maximum="20" Value="-10" LargeChange="2" TickPlacement="Both" Orientation="Vertical" />
        <TextBlock Text="{Binding Value, ElementName=slider}" />
    </StackPanel>
</Window>
